<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.siasun.dianshi.view.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:showArea="true"
        app:showChargeStation="true"
        app:showElevator="true"
        app:showMapNameView="false"
        app:showMixArea="true"
        app:showOnlinePose="true"
        app:showPositingArea="true"
        app:showStations="true"
        app:showTopViewPath="true"
        app:showVirtualWall="true"
        app:showWorldPath="true" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_add_teach_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载试教线999"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_add_teach_path888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载试教线888" />

            <Button
                android:id="@+id/btn_save_teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存试教" />
            <!--   -->
            <Button
                android:id="@+id/btn_start_teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始试教" />

            <Button
                android:id="@+id/btn_end_teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束试教" />

            <Button
                android:id="@+id/btn_add_globle_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载全路线" />
            <!--   -->
            <Button
                android:id="@+id/btn_add_clean_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载清扫线" />


            <!-- 路线编辑控件 -->
            <Button
                android:id="@+id/btn_edit_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑路线" />

            <Button
                android:id="@+id/btn_edit_point_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑节点属性" />

            <Button
                android:id="@+id/btn_edit_path_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑路段属性" />

            <Button
                android:id="@+id/btn_merge_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合并路线" />

            <Button
                android:id="@+id/btn_delete_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除路线" />

            <Button
                android:id="@+id/btn_delete_multiple_paths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除多条路线" />

            <Button
                android:id="@+id/btn_convert_path_to_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曲线转直线"
                app:layout_constraintTop_toBottomOf="@+id/btn_delete_path" />

            <Button
                android:id="@+id/btn_create_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建路线"
                app:layout_constraintTop_toBottomOf="@+id/btn_convert_path_to_line" />

            <Button
                android:id="@+id/btn_save_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存路线"
                app:layout_constraintTop_toBottomOf="@+id/btn_create_path" />

            <Button
                android:id="@+id/btn_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平移地图" />

            <Button
                android:id="@+id/btn_remove_noise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去除噪点"
                app:layout_constraintTop_toBottomOf="@+id/btn_move" />

            <Button
                android:id="@+id/btn_add_charge_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加充电站"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_remove_noise"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_edit_charge_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑充电站"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_charge_station"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_delete_charge_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除充电站"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_charge_station"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_save_charge_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存充电站"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_charge_station"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_add_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加乘梯点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_save_charge_station"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_edit_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑乘梯点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_elevator"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_delete_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除乘梯点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_edit_elevator"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_save_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存乘梯点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_elevator"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑避让点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_elevator"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_delete_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除避让点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_create_station"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_create_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="新建避让点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_ststion"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_save_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存避让点"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_add_mix_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加混行区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_station" />

            <Button
                android:id="@+id/btn_edit_mix_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑混行区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_delete_area" />

            <Button
                android:id="@+id/btn_delete_mix_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除混行区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_sp_area" />


            <Button
                android:id="@+id/btn_save_mix_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存混行区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_sp_area" />


            <Button
                android:id="@+id/btn_vir_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建虚拟墙"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_mix_area" />

            <Button
                android:id="@+id/btn_vir_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑虚拟墙"
                app:layout_constraintTop_toBottomOf="@+id/btn_vir_add" />

            <Button
                android:id="@+id/btnVirTypeEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑虚拟墙类型"
                app:layout_constraintTop_toBottomOf="@+id/btn_vir_add" />

            <Button
                android:id="@+id/btn_vir_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除虚拟墙"
                app:layout_constraintTop_toBottomOf="@+id/btn_vir_edit" />

            <Button
                android:id="@+id/btn_posting_area_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增定位区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_vir_del" />

            <Button
                android:id="@+id/btn_posting_area_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除定位区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_posting_area_add" />

            <Button
                android:id="@+id/btn_posting_area_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑定位区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_posting_area_del" />


            <Button
                android:id="@+id/btn_posting_area_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存定位区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_posting_area_edit" />


            <Button
                android:id="@+id/btn_edit_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑清扫区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_posting_area_commit" />

            <Button
                android:id="@+id/btn_add_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加清扫区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_area" />

            <Button
                android:id="@+id/btn_save_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存清扫区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_area" />

            <Button
                android:id="@+id/btn_delete_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除清扫区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_area" />

            <Button
                android:id="@+id/btn_add_sp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加特殊区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_sp_area" />

            <Button
                android:id="@+id/btn_edit_sp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑特殊区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_delete_area" />

            <Button
                android:id="@+id/btn_delete_sp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除特殊区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_sp_area" />


            <Button
                android:id="@+id/btn_save_sp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存特殊区域"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_sp_area" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>